<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1 class="text-center my-5">
        URL Shortener
    </h1>
<div class="container text-center">
    <form action="/short" method="post" class="form-inline">
        <input type="url" placeholder="Url" name="fullURL" id="fullURL" class="form-control border border-success border-2 col" required>
        <button type="submit" class="btn btn-primary my-1 col-md-2">submit</button>
    </form>
</div>

<div class="container my-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-md-5">Full URL</th>
                <th class="text-center">Short URL</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
           <% shortUrls.forEach(shortUrl => { %>

            <tr>
                <td>
                    <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
                </td>
                <td class="text-center">
                    <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
                </td>
                <td>
                    <a href="<%= shortUrl.clicks %>"><%= shortUrl.clicks %></a>
                </td>
            </tr>

          <% }) %>
        </tbody>
    </table>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>